<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_mypaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.errorlabs.infoquest2k17.Activities.TrackMypaper">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/r1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Select Your Submitted Paper Title To Get Status"
        android:gravity="center_horizontal"
        android:id="@+id/txt"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="30dp"
        android:backgroundTint="#000000"
        android:id="@+id/eventnamespinner">
    </Spinner>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get My Status"
        android:layout_marginTop="30dp"
        android:id="@+id/getstatusbtn"
        android:layout_below="@+id/eventnamespinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submitted Status :"
        android:textStyle="bold"
        android:id="@+id/submittedstatustext"
        android:layout_below="@+id/getstatusbtn"
        android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted"
            android:textStyle="bold"
            android:id="@+id/submitted"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/submittedstatustext"
            android:layout_below="@+id/getstatusbtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#4caf50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Submitted"
            android:textStyle="bold"
            android:visibility="invisible"
            android:id="@+id/notsubmitted"
            android:layout_toRightOf="@+id/submittedstatustext"
            android:layout_below="@+id/getstatusbtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified Status :"
            android:layout_below="@+id/submittedstatustext"
            android:id="@+id/verifiedstatustext"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verfied"
            android:textStyle="bold"
            android:id="@+id/verfied"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/verifiedstatustext"
            android:layout_below="@+id/submitted"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="#4caf50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Verified"
            android:textStyle="bold"
            android:id="@+id/notverified"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/verifiedstatustext"
            android:layout_below="@+id/submitted"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status gets updated within 24hrs after your submission."
            android:id="@+id/statusupdationtext"
            android:layout_below="@+id/remarks"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#304ffe"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/allthebeststatus"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#4caf50"
            android:visibility="gone"
            android:layout_below="@+id/verifiedstatustext"
            android:text="Congrats, Your Paper has been successfully verified.
             \nAll the best for you presentation. See you on 16th March @ Infoquest'17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remarks"
            android:text="Remarks"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/allthebeststatus"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff0000"/>

</RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/r1">

    </RelativeLayout>
</RelativeLayout>